<!-- Navbar -->
<nav id="navbar" class="navbar fixed-bottom navbar-light bg-faded">
  <div id="container">
    <div id="pages">
      <a class="pages" href="/">Home</a>
      <a class="pages" href="/tech-gallery">Projects</a>
      <a class="pages" href="/contact-us">Contact Us</a>
      <a class="pages" href="/future">Future Plans</a>
    </div>
    <% if !session[:email] %>
      <form class="form-inline" method="POST" action="/tech-gallery">
        <div id="contact-us">Email us and sign in: </div>
        <input name="email" type="text" placeholder="Email">
        <input name="password" type="password" placeholder="Password">
        <input id="nav-submit" value="Submit" type="submit">
      </form>
    <% else %>
      <div id="logDiv">
        <button id="logout">
          <a href="/logout">Logout</a>
        </button>
      </div>
    <% end %>
    
  </div>

</nav>

<!-- Contact info -->
<h1 id='contact'>Contact our customer service department</h1>
<div class="container">
	<div id='contact-row' class="row justify-content-between align-items-end">
		<div class="col-4 phone">
			<div id="phone-div">
				<h3 id='phone'>Phone Number:</h3>
				<p>392-555-4299</p>
			</div>
		</div>
		<div class="col-4 apply">
			<div id="apply">
				<div>
					<h3 id='click-to-apply'><a id='apply-link' href='/end'>Click here to apply</a></h3>
				</div>
			</div>
		</div>
		<div class="col-4 email">
			<div id="email-div">
				<h3 id='email'>Email:</h3>
				<p>customer-service@srobotics.com</p>
			</div>
		</div>
	</div>
</div>

